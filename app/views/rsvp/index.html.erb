<h3>RSVP</h3>
<div class="container">
  <div class="jumbotron content-box">
    <div class="row">
      <div class="col-md-12">
        <h4>Please RSVP by 13th April 2017.</h4>
      </div>
    </div>
    <p>
    <div class="row">
      <div class="col-md-12">
        <% if @rsvp.errors.any? %>
          <div class="alert alert-danger">
            You couldn't complete your RSVP because <%= pluralize(@rsvp.errors.count, "error")%> occurred:
            <ul>
              <% @rsvp.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
    <p>
    <%= form_for @rsvp, :url => {action: "create"}, class: "form-horizontal" do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, 'First Name:', class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, 'Last Name:', class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, 'Email:', class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-2">
          <%= f.label :rsvp, 'RSVP:', class: "form-check-inline" %>
        </div>
        <div class="col-md-10">
          <%= f.radio_button :rsvp, 'yes', class: "form-check-input", item_wrapper_class: "inline" %>
          <%= f.label :rsvp_yes, 'Yes, I can\'t wait!', class: "form-check-inline" %>
          <br>
          <%= f.radio_button :rsvp, 'no', class: "form-check-input", item_wrapper_class: "inline" %>
          <%= f.label :rsvp_no, 'No, gutted I can\'t make it', class: "form-check-inline" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :dietary_requirements, 'Dietary Requirements:', class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :dietary_requirements, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :anything_else, 'Anything else?', class: "col-md-2 col-form-label" %>
        <div class="col-md-10">
          <%= f.text_field :anything_else, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-12">
          <%= f.submit "Submit", class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
